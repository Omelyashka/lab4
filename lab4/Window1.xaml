<Window x:Class="lab4.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="400">
    <Grid Background="#ccffff">
        <Label Content="Введіть координату X:" HorizontalAlignment="Left" FontWeight="SemiBold" Margin="31,25,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.444,0.756"/>
        <Label Content="Введіть координату Y:" HorizontalAlignment="Left" FontWeight="SemiBold" Margin="31,74,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_X" HorizontalAlignment="Left" Margin="200,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TB_Y" HorizontalAlignment="Left" Margin="200,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Показати точку" Background="#00cccc" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top" Height="27" Width="120" Click="Button_Click"/>

    </Grid>
</Window>
